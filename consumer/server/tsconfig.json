{
  "compilerOptions": {
    "target": "es2020",

    "module": "commonjs",
    "rootDir": "./src",
    "moduleResolution": "Node",

    "sourceMap": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,

    "strict": true,

    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"]
}
